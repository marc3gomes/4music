        $imageDisplayArea = 'category_page_list';
        $showDescription = true;
        $templateType = \Magento\Catalog\Block\Product\ReviewRendererInterface::FULL_VIEW;
    }
    $mode_show = (isset($_GET['mode-show']) && $_GET['mode-show']) ? $_GET['mode-show'] : 4;
    switch ($mode_show) {
        case 2:
            $col_show = 'col-md-6';
            break;
        case 3:
            $col_show = 'col-md-4';
            break;
        case 4:
            $col_show = 'col-md-3';
            break;
        case 5:
            $col_show = 'col-15';
            break;
        case 6:
            $col_show = 'col-md-2';
            break;
