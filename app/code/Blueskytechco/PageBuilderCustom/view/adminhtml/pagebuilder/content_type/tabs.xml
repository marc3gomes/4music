<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="tabs">
        <breakpoints>
            <breakpoint name="tablet">
                <form>pagebuilder_tabs_tablet_form</form>
            </breakpoint>
        </breakpoints>
        <appearances>
            <appearance name="default">
                    <elements>    
                        <element name="main">
                            <attribute name="show_dropdown" source="data-show-dropdown"/>
                        </element>
                        <element name="title_dropdown">
                            <html name="title_dropdown"/>
                        </element>
                    </elements>
            </appearance>
        </appearances>
    </type>
</config>
