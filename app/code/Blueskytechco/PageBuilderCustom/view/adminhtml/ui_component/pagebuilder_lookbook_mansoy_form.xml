<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_lookbook_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_lookbook_mansoy_form.pagebuilder_lookbook_mansoy_form_data_source</item>
        </item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_lookbook_mansoy_form.pagebuilder_lookbook_mansoy_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_lookbook_mansoy_form</namespace>
    </settings>
    <dataSource name="pagebuilder_lookbook_mansoy_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_lookbook_mansoy_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance_fieldset" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">mansoy</item>
                </item>
            </argument>
        </field>
        <field name="space_between_item" sortOrder="100" formElement="select" component="Magento_PageBuilder/js/form/element/select-filtered-options">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">30</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Space Between Item</label>
                <dataScope>space_between_item</dataScope>
                <notice translate="true">Space between Banners.</notice>
                <addAfter translate="true">px</addAfter>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Blueskytechco\PageBuilderCustom\Model\Config\Margin\Options"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>